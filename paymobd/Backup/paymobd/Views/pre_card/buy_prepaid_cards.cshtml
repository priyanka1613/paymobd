@using (Ajax.BeginForm("buy_prepaid_cards", "pre_card", new AjaxOptions
{
    UpdateTargetId = "new1",
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST"
}))
{
    <div>
        Choose Operator:
        @Html.DropDownList("operator_name", new SelectList(ViewBag.operators))
    </div>
    <div>
        Available Amount: BDT 50</div>
    <div id="new1">
        <input type="submit" value="Buy Pre-paid Card" />
    </div>
}
