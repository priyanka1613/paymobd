@model paymobd.Models.Transection
<script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
@using (Html.BeginForm("wallet_refill_bangla", "Home"))
{
    @Html.ValidationSummary(true)
    
    <input type="hidden" name="username" value="@User.Identity.Name" hidden="hidden"/>
    <input type="hidden" name="mo_number" value="waletrefill" hidden="hidden"/>
    <input type="hidden" name="ConfirmNumber" value="waletrefill" hidden="hidden"/>
    <input type="hidden" name="transection_date" value="@DateTime.Now" hidden="hidden" />
    
    <table class="editor">
        <tr>
            <th>
                @Html.Label("পরিমান (টাকা):")
            </th>
            <td>
                @Html.DropDownListFor(model => model.transection_ammount, new SelectList(ViewBag.ammount))
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.transection_ammount)
            </td>
        </tr>
        <tr>
            <td>
            </td>
            <td>
                <input type="submit" value="ওকে" />
            </td>
            <td>
            </td>
        </tr>
    </table>
}